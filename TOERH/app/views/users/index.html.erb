<% if flash[:notice] %>
<div class="notice">
	<%= flash[:notice] %>
</div>
<% end %>

<div class="login">
<h1 class="logintext">Logga in</h1>

<fieldset class="loginform">
<%= form_tag(login_path, method: "post") do %>

	<p><%= label_tag(:email, "E-Mail:") %></p>
	<p><%= email_field_tag(:email) %></p>

	<p><%= label_tag(:password, "Lösenord:") %></p>
	<p><%= password_field_tag(:password) %></p>

	<p><%= submit_tag("Logga in") %></p>
	<% end %>
</fieldset>

<%= link_to "Registera ny användare", new_user_path %>

</div>